
generator client {
  provider = "prisma-client-js"
  previewFeatures = ["driverAdapters"]  
}

datasource db {
  provider = "postgresql"
}


enum Role {
  author
  reader
}

enum ArticleStatus {
  Draft
  Published
}

model User {
  id        String   @id @default(uuid())
  name      String
  email     String   @unique
  password  String  
  role      Role

  articles  Article[] @relation("AuthorArticles")
  readLogs  ReadLog[] @relation("ReaderReadLogs")

  @@index([role])
  @@index([name])
}

model Article {
  id         String        @id @default(uuid())
  title      String
  content    String        
  category   String
  status     ArticleStatus @default(Draft)

  authorId   String
  author     User          @relation("AuthorArticles", fields: [authorId], references: [id], onDelete: Restrict)

  createdAt  DateTime      @default(now())
  deletedAt  DateTime?


  readLogs   ReadLog[]
  analytics  DailyAnalytics[]

  @@index([authorId])
  @@index([category])
  @@index([status])
  @@index([deletedAt])
  // Helpful for your public feed query (published + not deleted + newest)
  @@index([status, deletedAt, createdAt])
}

model ReadLog {
  id        String   @id @default(uuid())
  articleId String
  article   Article  @relation(fields: [articleId], references: [id], onDelete: Cascade)
  readerId  String?
  reader    User?    @relation("ReaderReadLogs", fields: [readerId], references: [id], onDelete: SetNull)
  readAt    DateTime @default(now())

  @@index([articleId, readAt])
  @@index([readerId, readAt])
}

model DailyAnalytics {
  id        String   @id @default(uuid())
  articleId String
  article   Article  @relation(fields: [articleId], references: [id], onDelete: Cascade)
  viewCount Int
  date      DateTime
  @@unique([articleId, date])
  @@index([date])
  @@index([articleId])
}